@model OnlineMovieStore.Web.Areas.UserManagment.Models.UserViewModel
<div class="breadcrumbs">
    <a href="/Home/Index">Home</a>
    <a href="/User/User/Index">Account</a>
    <span>Account settings</span>
</div>
<h3 class="text-center">Account Settings</h3>
<div class="centred">
    <div class="col-md-5 text-center ">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                @if (@Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="@Model.Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="@Model.Email" class="form-control" />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PhoneNumber"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Save Changes</button>
        </form>
    </div>
</div>