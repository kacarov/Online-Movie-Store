@{
    ViewData["Title"] = "Request Movie";
}

<div class="breadcrumbs">
    <a href="/Home/Index">Home</a>
    <span>Request Movie</span>
</div>
<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container  col-md-8">
    <form action="/action_page.php">
        <div class="row">
            <div class="col-25">
                <label for="fname">Movie Name</label>
            </div>
            <div class="col-75">
                <input type="text" id="fname" name="movieName" placeholder="Movie name ..">
            </div>
        </div>

        <div class="row">
            <div class="col-25">
                <label for="subject">Adittional info about reques</label>
            </div>
            <div class="col-75">
                <textarea id="subject" name="subject" placeholder="Write something.." style="height: 196px; margin: 0px; width: 847px;"></textarea>
            </div>
        </div>
        <br />
        <div class="row">
            <input type="submit" value="Submit">
        </div>
    </form>
</div>