@{
    ViewData["Title"] = "Request Movie";
}

<h2>@ViewData["Title"]</h2>
<p>Request movie of your wish</p>

<div class="container">
    <form action="/action_page.php">
        <div class="row">
            <div class="col-25">
                <label for="fname">Movie Name</label>
            </div>
            <div class="col-75">
                <input type="text" id="fname" name="movieName" placeholder="Movie name ..">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="genre">Genre</label>
            </div>
            <div class="col-75">
                <select id="genre" name="genre">
                    <option value="australia">Action</option>
                    <option value="canada">Horror</option>
                    <option value="usa">Comedy</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="subject">Adittional info about reques</label>
            </div>
            <div class="col-75">
                <textarea id="subject" name="subject" placeholder="Write something.." style="height:200px"></textarea>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Submit">
        </div>
    </form>
</div>