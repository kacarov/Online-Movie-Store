@{
    ViewData["Title"] = "Report a problem";
}

<h2>@ViewData["Title"]</h2>
<div class="container">
    <form action="/action_page.php">
        <div class="row">
            <div class="col-25">
                <label for="fname">Theme</label>
            </div>
            <div class="col-75">
                <input type="text" id="fname" name="theme" placeholder="Theme ..">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="subject">Adittional info about request</label>
            </div>
            <div class="col-75">
                <textarea id="subject" name="subject" placeholder="Write something.." style="height:200px"></textarea>
            </div>
        </div>
        <div class="row">
            <input type="submit" value="Submit">
        </div>
    </form>
</div>